{
  "openapi":"3.0.0",
  "info":{
    "title":"Solid api documentation",
    "description":"Documentando api",
    "version":"1.0.0",
    "contact":{
      "name":"Igor Rodrigues",
      "email":"igorsteixeira94@gmail.com"
    }
  },
  "paths":{
    "/users":{
      "post":{
        "tags":["User"],
        "summary":"Create User",
        "description":"Create new user",
        "requestBody":{
          "content":{
            "application/json":{
              "schema":{
                "type":"object",
                "properties":{
                  "name":{
                    "type":"string"
                  },
                  "email":{
                    "type":"string",
                    "format":"email"
                  }
                },
                "example":{
                  "name":"Igor Rodrigues",
                  "email":"igorsteixeira94@gmail.com"
                }
              }
            }
          }
        },
        "responses":{
          "201":{
            "description":"User created",
            "content":{
              "application/json":{
                "schema":{
                  "type":"object",
                  "properties":{
                    "id":{
                      "type":"string",
                      "format":"uuid"
                    },
                    "name":{
                      "type":"string"
                    },
                    "admin":{
                      "type":"boolean",
                      "default":"false"
                    },
                    "email":{
                      "type":"string",
                      "format":"email"
                    },
                    "created_at":{
                      "type":"string",
                      "format":"date-time"
                    },
                    "updated_at":{
                      "type":"string",
                      "format":"date-time"
                    }
                  }
                }
              }
            }
          },
          "400":{
            "description":"User already exists",
            "content":{
              "application/json":{
                "schema":{
                  "type":"object",
                  "properties":{
                    "error":{
                      "type":"string"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "get":{
        "tags":["User"],
        "summary":"List all users",
        "description":"List all users, if user_id is an admin user",
        "parameters":[{
          "name":"user_id",
          "in":"header",
          "description":"Uuid Admin User",
          "required":true,
          "schema":{
            "type":"string",
            "format":"uuid"
          }
        }],
        "responses":{
          "200":{
            "description":"User created",
            "content":{
              "application/json":{
                "schema":{
                  "type":"array",
                  "items":{
                    "properties":{
                      "id":{
                        "type":"string",
                        "format":"uuid"
                      },
                      "name":{
                        "type":"string"
                      },
                      "admin":{
                        "type":"boolean",
                        "default":"false"
                      },
                      "email":{
                        "type":"string",
                        "format":"email"
                      },
                      "created_at":{
                        "type":"string",
                        "format":"date-time"
                      },
                      "updated_at":{
                        "type":"string",
                        "format":"date-time"
                      }
                    }
                  }
                }
              }
            }
          },
          "400":{
            "description":"User is not admin",
            "content":{
              "application/json":{
                "schema":{
                  "type":"object",
                  "properties":{
                    "error":{
                      "type":"string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}":{
      "get":{
        "tags":["User"],
        "summary":"List User",
        "description":"List user by id",
        "parameters":[{
          "name":"user_id",
          "in":"path",
          "description":"Uuid User",
          "required":true,
          "schema":{
            "type":"string",
            "format":"uuid"
          }
        }],
        "responses":{
          "200":{
            "description":"User created",
            "content":{
              "application/json":{
                "schema":{
                  "type":"object",
                  "properties":{
                    "id":{
                      "type":"string",
                      "format":"uuid"
                    },
                    "name":{
                      "type":"string"
                    },
                    "admin":{
                      "type":"boolean",
                      "default":"false"
                    },
                    "email":{
                      "type":"string",
                      "format":"email"
                    },
                    "created_at":{
                      "type":"string",
                      "format":"date-time"
                    },
                    "updated_at":{
                      "type":"string",
                      "format":"date-time"
                    }
                  }
                }
              }
            }
          },
          "404":{
            "description":"User not found",
            "content":{
              "application/json":{
                "schema":{
                  "type":"object",
                  "properties":{
                    "error":{
                      "type":"string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}/admin":{
      "patch":{
        "tags":["User"],
        "summary":"Make admin user",
        "description":"Add permissions admin in user",
        "parameters":[{
          "name":"user_id",
          "in":"path",
          "description":"Uuid User",
          "required":true,
          "schema":{
            "type":"string",
            "format":"uuid"
          }
        }],
        "responses":{
          "200":{
            "description":"User is admin",
            "content":{
              "application/json":{
                "schema":{
                  "type":"object",
                  "properties":{
                    "id":{
                      "type":"string",
                      "format":"uuid"
                    },
                    "name":{
                      "type":"string"
                    },
                    "admin":{
                      "type":"boolean",
                      "default":"true"
                    },
                    "email":{
                      "type":"string",
                      "format":"email"
                    },
                    "created_at":{
                      "type":"string",
                      "format":"date-time"
                    },
                    "updated_at":{
                      "type":"string",
                      "format":"date-time"
                    }
                  }
                }
              }
            }
          },
          "404":{
            "description":"User not found",
            "content":{
              "application/json":{
                "schema":{
                  "type":"object",
                  "properties":{
                    "error":{
                      "type":"string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
    
  }
}

